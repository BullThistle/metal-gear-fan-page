<% content_for(:background, "games") %>
<div class="center-block">
  <div class="breadcrumbs">
    <nav aria-label="You are here:" role="navigation">
      <ul class="breadcrumbs">
        <li><a href="/">Home</a></li>
        <li><a href="/games">Games</a></li>
        <li><a href="/games/<%= @game.id %>"><%= @game.name %></a></li>
      </ul>
    </nav>
  </div><div class="middle-content-section">
    <div class="middle-content-text">
      <h1><%= @game.name %></h1>
      <h3>Release Date: <%= @game.release %></h3>
      <br>
      <h2>Description:</h2>
      <br>
      <p><%= @game.description %></p>
      <br>
      <h2>Gameplay:</h2>
      <br>
      <p><%= @game.gameplay %></p>
      <br>
      <h2>Story:</h2>
      <br>
      <p><%= @game.story %></p>
      <br>
      <br>
      <h2>Development:</h2>
      <br>
      <p><%= @game.development %></p>
      <br>
    </div>

    <p><%= link_to "Delete game", game_path(@game),
                            :data => {:confirm => "Are you sure?",
                                           :method => "delete"} %></p>

    <p><%= link_to "Return to games", games_path %></p>
  </div>
</div>
